<div class="thumbnails">
	<% showcase_images.each do |showcase_image| %>
			<%= link_to image_tag(showcase_image.image.thumbnail, 
				:class => "thumbnail", 
				:alt => [showcase_image.artist, showcase_image.title,
						showcase_image.year.to_s, showcase_image.media,
						showcase_image.dimensions].join(" - "),
				:data => {"image" => showcase_image}),
				showcase_image.image.full_size.url %>
	<% end %>
</div>